<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">
    <!-- Css link -->
    <link rel="stylesheet" href="/public/css/answerstyle.css">

    <title>Answer</title>
</head>

<body>

    <div class="container head">
        <div class="cont">

            <span class="back-btn"><a href="./.TeacherSection.ejs"><i class="fa-solid fa-arrow-left"></i></a></span>
            <%= question[0].Question%>



        </div>
    </div>

    <article id="mainArticle">
        <div class="container">
            <div class="container text-center">ANSWERS</div>
        </div>

        <!-- <--  -->
        <div class="container cont2">

            <% answers.forEach(function(answer) {%>
                <div class="row">
                    <div class="container ans">
                        
                             <div class="ans-block"> <%=answer.answer%>  </div>
                        
                        
                             <button class="btn btn-danger delete-btn">Delete</button> 
                        
                    </div>
                </div>
                <% })%>

        </div>

        <form action="/TeacherSection/Answer<%=quesId%>" method="post">
        <div class="container cont3 ">

            <textarea name="ans" id="ans" class="ans-container" cols="140" rows="4"></textarea>

            <button class="btn btn-success upload-btn" type="submit"> UPLOAD</button>
        </div>
        </form>

    </article>
    <nav id="mainNav">
        <div class="welcome">
            Welcome back Niket
        </div>

        <div>
            <form action="logout" method="post">
                <button class="btn btn-primary logout-btn" type="submit"> Logout </button>
            </form>
        </div>
    </nav>
    <!-- <div id="siteAds">Ads</div> -->



</body>

</html>