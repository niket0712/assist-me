<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet">

    <!-- Css link -->
    <link rel="stylesheet" href="/public/css/StudentSection.css">

    <title>Student Section</title>
</head>

<body>

    <header id="pageHeader">
        <div> ☀️ Good day <b>Niket</b>  <span class="student">  STUDENT </span></div>  
        
    </header>

    <article id="mainArticle" class="text-center">
        <div class="container cont">
            Total queries asked
        </div>

        <div class="container cont2">QUESTIONS</div>

        <div class="container">
            <div class="row">
                <% results.forEach(function(result){ %>
                    <div class="card question-card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=result.Question %>
                            </h5>
                            <p class="card-text">

                                <a href="/StudentSection/Question<%=result.Id%>" class="stretched-link">Lorem ipsum
                                    dollar sit dibht bnjkfm tyhsbafj khdwryto poesght </a>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </article>

    <nav id="mainNav">
        <div class="welcome">
            Welcome back Niket
        </div>

        <div>
            <form action="logout" method="post">
                <button class="btn btn-primary logout-btn" type="submit"> Logout </button>
            </form>
        </div>
    </nav>

    <footer id="pageFooter">
        <div class="text-center  mt-4 pt-2">
            <a href="StudentQuestion" data-bs-toggle="tooltip" data-bs-placement="top" title="Ask a question">
                <button id="read-more" class="btn btn1 btn-primary pull-right "> <i class="fa-solid fa-plus"></i>
                </button>
            </a>
        </div>
    </footer>


</body>

</html>